programa {
	funcao inicio() {
		
		real n1, n2, presenca 
		cadeia nome
		
		escreva("digite o Nome do Aluno: ")
		leia(nome)
		
		escreva("digite N1: ")
		leia(n1)
		
		escreva("digite N2: ")
		leia(n2)
		
		escreva("digite a media de presença do aluno(0-100):")
    	leia(presenca)
    	
    	se(n1 + n2 / 2 >= 8 e presenca >= 75) 
	       
    	escreva(nome, " APROVADO *-*")
	
 	    senao 
 	    
 	    escreva(nome, " REPROVADO ;-;")
	

 	    
 	    
	}
}
